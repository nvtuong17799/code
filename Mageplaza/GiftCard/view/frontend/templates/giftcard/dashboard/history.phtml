<?php
/** @var Mageplaza\GiftCard\Block\Mygiftcard\Dashboard\History $block */
$history = $block->getHistory();
?>
<div class="block block-dashboard-info">
    <div class="block-title"><strong><?= $block->escapeHtml(__('History'))?></strong></div>
    <div class="block-content">
        <?php if ($history && sizeof($history)): ?>
        <div class="table-wrapper orders-recent">
            <table class="data table table-order-items recent" id="my-orders-table">
                <thead>
                <tr>
                    <th scope="col" class="col date"><?= $block->escapeHtml(__('Date')) ?></th>
                    <th scope="col" class="col code"><?= $block->escapeHtml(__('Code')) ?></th>
                    <th scope="col" class="col amount"><?= $block->escapeHtml(__('Amount')) ?></th>
                    <th scope="col" class="col action"><?= $block->escapeHtml(__('Action')) ?></th>
                </tr>
                </thead>
                <tbody>
                <?php foreach ($history as $key => $value) : ?>
                    <tr>
                        <td class="col date"><?= $block->escapeHtml($block->formatDate($value['action_time'])) ?></td>
                        <td class="col code"><?= $block->escapeHtml($block->getCode($value['giftcard_id'])) ?></td>
                        <td class="col amount"><?= $block->escapeHtml($block->getCurrencyWithFormat($value['amount'])) ?></td>
                        <td class="col action"><?= $block->escapeHtml($value['action']) ?></td>
                    </tr>
                <?php endforeach; ?>
                </tbody>
            </table>
        </div>
            <?php if ($block->getPagerHtml()): ?>
                <div class="order-products-toolbar toolbar bottom"><?php echo $block->getPagerHtml(); ?></div>
            <?php endif ?>
        <?php else: ?>
            <div class="message info empty"><span><?php echo __('No any history record.'); ?></span></div>
        <?php endif ?>
    </div>
</div>

